<section class="d-flex justify-content-center">
    <div class="card border-dark mt-5 mb-3" style="width: 12rem;">
        <div class="card-body">
            <h5 class="card-title text-center">Please log in to access employee information.</h5>
        </div>
    </div>
</section>
<div class="d-flex justify-content-center">
    <form style="width: 12rem;">
        <div class="form-group">
            <label for="username-login">Username</label>
            <input type="username" class="form-control" id="username-login" placeholder="Enter Username">
        </div>
        <div class="form-group">
            <label for="password-login">Password</label>
            <input type="password" class="form-control" id="password-login" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary mt-3 mb-5" href="/login">Submit</button>
    </form>
</div>